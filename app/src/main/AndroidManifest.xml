<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.sourcei.calette">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Crashlytics -->
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <!-- Analytics -->
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />

        <!-- Disable Advertising ID -->
        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />

        <!--Main Activity-->
        <activity
            android:name=".ui.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionbar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Gradient List Activity-->
        <activity
            android:name=".ui.activities.GradientListActivity"
            android:theme="@style/AppTheme.NoActionbar" />

        <!--Bookmarks List Activity-->
        <activity
            android:name=".ui.activities.BookmarksActivity"
            android:theme="@style/AppTheme.NoActionbar" />

        <!--Settings-->
        <activity
            android:name=".ui.activities.SettingsActivity"
            android:theme="@style/AppTheme.NoActionbar" />

        <!--Gradient-->
        <activity
            android:name=".ui.activities.GradientActivity"
            android:theme="@style/AppTheme.NoActionbar" />

    </application>

</manifest>